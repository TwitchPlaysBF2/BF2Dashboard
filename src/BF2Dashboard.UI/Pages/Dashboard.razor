                                                            <td class="text-center">
                                                                @player.Score
                                                            </td>
                                                            <td class="text-center">
                                                                <i class="@GetClassForFriendButton(player.IsFriend)" @onclick="() => AddOrRemoveFriend(player, server)" title="@GetTitleForFriendButton(player.IsFriend)"></i>
                                                            </td>
                                                        </tr>
                                                    }
