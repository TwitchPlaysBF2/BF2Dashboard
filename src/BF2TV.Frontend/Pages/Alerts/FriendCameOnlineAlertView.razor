@using BF2TV.Domain.Models.Alerts
@using BF2TV.Frontend.Components

<span>
    [@Status.WhenUtc.ToLocalTime().ToShortTimeString()]
    <span class="text-white">
        @Status.PlayerName
    </span> has joined server:
    <span class="fw-bold">
        <CroppedSpan Input="@Status.ServerInfo.ServerName" MaxLength="@ServerNameCropLength"/>
    </span>
</span>

@code {

    [Parameter]
    public FrameIsOnServerStatus Status { get; set; } = default!;

    [Parameter]
    public int? ServerNameCropLength { get; set; }
}